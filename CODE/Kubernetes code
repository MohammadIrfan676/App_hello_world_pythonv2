eksctl create cluster --name demo-cluster-1 --region us-east-1
eksctl delete cluster --name demo-cluster-1
kubectl apply -f deployment.yaml
kubectl get pods
kubectl apply -f service.yaml
kubectl get svc
kubectl apply -f ingress.yaml
kubectl get ing
kubectl edit svc hello-python-app
kubectl get nodes -o wide
#make sure port is allowed to all traffic in ec2 security group to access in browser through Nodeport
kubectl get svc -o wide
#installing nginx controller
kubectl apply -f https://raw.githubusercontent.com/kubernetes/ingress-nginx/controller-v1.11.1/deploy/static/provider/aws/deploy.yaml
#this step is just to check ingres class 
kubectl get pods -n  ingress-nginx
kubectl edit pod <pod name> -n ingress-nginx
# to forward traffic from ALB Address to specified domain name
kubectl get ing
#copy ALB address
nslookup <ALB Address>
#copy IP address
sudo vim /etc/hosts
# paste IP followed by hello-python-app.local
# now you can access through domain name
http://hello-python-app.local/
